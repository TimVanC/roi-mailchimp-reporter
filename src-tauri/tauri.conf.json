{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ROI Mailchimp Reporter",
  "version": "1.0.1",
  "identifier": "com.roi.mailchimp-reporter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1423",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ROI Mailchimp Reporter",
        "width": 1200,
        "height": 800,
        "label": "main",
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Â© 2024 ROI-NJ",
    "targets": ["app", "dmg", "msi"],
    "publisher": "ROI-NJ",
    "icon": [
      "icons/roi-icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "providerShortName": null,
      "license": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "dialog": null,
    "shell": null,
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgzQUFBODA2RDI5QjQ5QkMKUldTOFNadlNCcWlxZ3ptZnpMSGNHdGZ0UCsvQkExRmE5U3NXbUw5MUVHSEdvRCtwMHJ6MGlwckgK",
      "endpoints": [
        "https://raw.githubusercontent.com/TimVanC/roi-mailchimp-reporter/main/updates.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
