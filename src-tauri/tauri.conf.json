{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1423",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ROI Mailchimp Reporter",
    "version": "1.0.1"
  },
  "tauri": {
    "windows": [
      {
        "title": "ROI Mailchimp Reporter",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "bundle": {
      "active": true,
      "identifier": "com.roi.mailchimp-reporter",
      "category": "DeveloperTool",
      "copyright": "Â© 2024 ROI-NJ",
      "targets": ["app", "dmg", "msi"],
      "publisher": "ROI-NJ",
      "icon": [
        "icons/roi-icon.png",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "http://timestamp.digicert.com",
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
